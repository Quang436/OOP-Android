<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.DualPhone" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_primary_332</item>
        <item name="colorPrimaryDark">@color/blue_dark_332</item>
        <item name="colorAccent">@color/blue_primary_332</item>
        <item name="android:windowBackground">@color/background_gray_332</item>
    </style>

    <!-- Custom styles for the components -->
    <style name="PhoneContainer_332">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">600dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="InputField_332">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/text_white_332</item>
        <item name="android:textColorHint">@color/text_white_332</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="InputFieldSmall_332" parent="InputField_332">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StatText_332">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white_332</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LoginButton_332">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/text_white_332</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
</resources>