<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#E8E8F0"
    android:padding="20dp"
    android:gravity="center">

    <!-- MÃ n hÃ¬nh Ä‘iá»‡n thoáº¡i bÃªn trÃ¡i - Login -->
    <LinearLayout
        android:id="@+id/phone_left_332"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#4285F4"
        android:layout_marginEnd="10dp"
        android:padding="20dp"
        android:gravity="center">

        <!-- Logo -->
        <View
            android:id="@+id/logo_left_332"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="40dp" />

        <!-- Form Ä‘Äƒng nháº­p -->
        <LinearLayout
            android:id="@+id/login_form_332"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <!-- User Name -->
            <EditText
                android:id="@+id/username_input_332"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="User Name"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="15dp" />

            <!-- Password -->
            <EditText
                android:id="@+id/password_input_332"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢â€¢"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:inputType="textPassword"
                android:background="#00000000"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="25dp" />

            <!-- Login Button -->
            <Button
                android:id="@+id/login_button_332"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="LOGIN ME"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="#1A73E8"
                android:layout_marginBottom="20dp" />

            <!-- Lost Password -->
            <TextView
                android:id="@+id/lost_password_332"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Lost password ?"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- MÃ n hÃ¬nh Ä‘iá»‡n thoáº¡i bÃªn pháº£i - Profile -->
    <LinearLayout
        android:id="@+id/phone_right_332"
        android:layout_width="0dp"
        android:layout_height="600dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#4285F4"
        android:layout_marginStart="10dp"
        android:padding="20dp"
        android:gravity="center">

        <!-- Avatar -->
        <View
            android:id="@+id/avatar_332"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="20dp" />

        <!-- Numbers -->
        <LinearLayout
            android:id="@+id/stats_layout_332"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="30dp">

            <TextView
                android:id="@+id/stat_left_332"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="125"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginEnd="40dp" />

            <TextView
                android:id="@+id/stat_right_332"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="250"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Profile Form -->
        <LinearLayout
            android:id="@+id/profile_form_332"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <!-- Email -->
            <EditText
                android:id="@+id/email_input_332"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Email : mail@email.com"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="12dp"
                android:textSize="14sp" />

            <!-- Phone -->
            <EditText
                android:id="@+id/phone_input_332"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Phone : +99 999 555 222"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="12dp"
                android:textSize="14sp" />

            <!-- Skype -->
            <EditText
                android:id="@+id/skype_input_332"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Skype : myskpie"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:paddingHorizontal="15dp"
                android:layout_marginBottom="12dp"
                android:textSize="14sp" />

            <!-- Web -->
            <EditText
                android:id="@+id/web_input_332"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Web : mywebsite.com"
                android:textColorHint="#FFFFFF"
                android:textColor="#FFFFFF"
                android:background="#00000000"
                android:paddingHorizontal="15dp"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>